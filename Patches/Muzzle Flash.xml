		<mods>
			<li>Muzzle Flash</li>
		</mods>
		<match Class="PatchOperationSequence">
			<operations>
			
				<li Class="SafePatcher.PatchOperationSetModExtension">
					<xpath>Defs/ThingDef[defName="Gun_GatlingCannonTurret"]</xpath>
					<value>
						<li Class="MuzzleFlash.MuzzleFlashProps">
							<def>MF_StandardMuzzleFalsh</def>
							<drawSize>(1.2,1.2)</drawSize>
							<offsets>
								<li>(1.0,0.38)</li>
								<li>(1.0,-0.38)</li>
							</offsets>
						</li>
					</value>
				</li>
				
			</operations>
		</match>
	</Operation>
			
</Patch>